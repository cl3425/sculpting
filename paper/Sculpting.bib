	journal = {The Astrophysical Journal},
	author = {Fressin, François and Torres, Guillermo and Charbonneau, David and Bryson, Stephen T. and Christiansen, Jessie and Dressing, Courtney D. and Jenkins, Jon M. and Walkowicz, Lucianne M. and Batalha, Natalie M.},
