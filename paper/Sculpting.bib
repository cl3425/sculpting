	file = {Full Text PDF:/Users/chrislam/Zotero/storage/NU7MRLZD/Feroz and Hobson - 2008 - Multimodal nested sampling an efficient and robus.pdf:application/pdf;Snapshot:/Users/chrislam/Zotero/storage/X5BYQ77C/1023701.html:text/html},
}

